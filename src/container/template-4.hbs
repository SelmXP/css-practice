<header class="header">
    <div class="">
        {{> logo }}
    </div>
    <nav class="header-nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <div class="main_heading">{{heading}}</div>
        <div class="main_description">{{description}}</div>
        <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</main>


<div class="actions">
    {{#each actions}}
    <div class="actions_block">
        <h3 class="actions_heading">{{heading}}</h3>
        <a href="{{url}}" class="button actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<div class="footer">
    <div>
        {{> logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title"> {{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}

</div>